
vi /etc/sysconfig/puppetserver



systemctl start puppetserver 

vi site.pp

node /agent/ {
    include webserver
}

vi modules/webserver/manifests/init.pp

class webserver {
    if $::osfamily == 'Redhat' {
        package { 'httpd' :
          ensure => present
        }
    } elsif $::osfamily == 'Debian' {
        package { 'apache2' :
          ensure => present
        }
    } else {
        print "this is not a supported distro."
    }
}
